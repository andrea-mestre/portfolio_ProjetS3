---
import hourHud from '../assets/svg/hour_hud.svg';
import utcIcon from '../assets/svg/UTC.svg';
import clockIcon from '../assets/svg/clock.svg';
---

<div class="hud-clock-container">
  <!-- SVG hour_hud en haut (agrandi) -->
  <div class="hour-hud-top">
    <img src={hourHud.src} alt="" />
  </div>
  
  <!-- Ligne avec l'heure et UTC -->
  <div class="time-utc-row">
    <!-- Affichage de l'heure avec effet de flou -->
    <div class="time-display">
      <div class="time-blur" id="time-blur">15:30:24</div>
      <div class="time-main" id="time-main">15:30:24</div>
    </div>
    
    <!-- Boîte UTC -->
    <div class="utc-container">
      <img src={utcIcon.src} alt="UTC+2" class="utc-badge" />
    </div>
  </div>
  
  <!-- Textes de localisation -->
  <div class="location-info">
    <div class="location-label">LOCATION :</div>
    <div class="location-value">POSITION IN FRANCE</div>
  </div>
  
  <!-- Icône clock en bas à droite -->
  <div class="clock-icon-bottom">
    <svg class="clock-svg" width="40" height="40" viewBox="0 0 41 40" fill="none" xmlns="http://www.w3.org/2000/svg">
      <!-- Coins statiques -->
      <path d="M31.5507 1H40V9.36" stroke="white" stroke-width="2" stroke-miterlimit="10"/>
      <path d="M1 9.36V1H9.4493" stroke="white" stroke-width="2" stroke-miterlimit="10"/>
      <path d="M9.4493 39H1V30.64" stroke="white" stroke-width="2" stroke-miterlimit="10"/>
      <path d="M40 30.64V39H31.5507" stroke="white" stroke-width="2" stroke-miterlimit="10"/>
      
      <!-- Groupe rotatif (lignes centrales) -->
      <g class="rotating-inner">
        <path d="M17.8669 21.8604L23.8669 21.8604L23.8669 15.8604L17.8669 15.8604L17.8669 21.8604Z" fill="white"/>
        <path d="M31.6451 29.6386L10.3679 8.3614" stroke="white" stroke-width="1.15" stroke-miterlimit="10"/>
      </g>
    </svg>
  </div>
</div>

<script>
  function updateClock() {
    const now = new Date();
    
    // Heure locale
    const hours = now.getHours().toString().padStart(2, '0');
    const minutes = now.getMinutes().toString().padStart(2, '0');
    const seconds = now.getSeconds().toString().padStart(2, '0');
    
    const timeString = `${hours}:${minutes}:${seconds}`;
    
    // Mettre à jour l'affichage
    const timeMain = document.getElementById('time-main');
    const timeBlur = document.getElementById('time-blur');
    
    if (timeMain) timeMain.textContent = timeString;
    if (timeBlur) timeBlur.textContent = timeString;
  }
  
  // Mettre à jour immédiatement
  updateClock();
  
  // Mettre à jour toutes les secondes
  setInterval(updateClock, 1000);
</script>

<style>
  .hud-clock-container {
    position: relative;
    width: 100%;
    max-width: 380px;
    height: auto;
    margin: 0 auto;
    padding: 18px;
    opacity: 0;
    animation: fadeInClock 1s ease-out 2s forwards;
  }

  @keyframes fadeInClock {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* SVG hour_hud en haut (agrandi) */
  .hour-hud-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 110%;
    transform: translateX(-5%);
    z-index: 1;
  }
  
  .hour-hud-top img {
    width: 100%;
    height: auto;
    display: block;
    filter: drop-shadow(0 0 5px rgba(255,255,255,0.3));
    animation: glowPulse 3s ease-in-out infinite;
  }

  @keyframes glowPulse {
    0%, 100% {
      filter: drop-shadow(0 0 5px rgba(255,255,255,0.3));
    }
    50% {
      filter: drop-shadow(0 0 10px rgba(184,187,240,0.6));
    }
  }
  
  /* Ligne avec l'heure et UTC */
  .time-utc-row {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 35px;
    margin: 40px 0 18px 0;
    z-index: 2;
  }
  
  /* Affichage de l'heure */
  .time-display {
    position: relative;
    min-width: 220px;
    flex-shrink: 0;
  }
  
  .time-blur {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    font-family: var(--font-title2);
    font-size: 40px;
    font-weight: 400;
    color: var(--color-darkpurple);
    filter: blur(15px);
    letter-spacing: 0.05em;
    pointer-events: none;
    font-variant-numeric: tabular-nums;
    white-space: nowrap;
    animation: neonBlurBreath 4s ease-in-out infinite;
  }

  @keyframes neonBlurBreath {
    0%, 100% {
      filter: blur(15px);
      opacity: 0.7;
      text-shadow: 0 0 35px var(--color-darkpurple);
    }
    50% {
      filter: blur(22px);
      opacity: 1;
      text-shadow: 0 0 50px var(--color-darkpurple), 0 0 70px var(--color-purple);
    }
  }
  
  .time-main {
    position: relative;
    font-family: var(--font-title2);
    font-size: 40px;
    font-weight: 400;
    color: var(--color-darkpurple);
    letter-spacing: 0.05em;
    font-variant-numeric: tabular-nums;
    white-space: nowrap;
    text-shadow:
      0 0 10px var(--color-darkpurple),
      0 0 20px var(--color-darkpurple),
      0 0 20px var(--color-darkpurple);
    animation: neonBreath 4s ease-in-out infinite;
    transition: all 0.3s ease;
  }

  @keyframes neonBreath {
    0%,
    100% {
      text-shadow:
        0 0 10px var(--color-darkpurple),
        0 0 20px var(--color-darkpurple),
        0 0 30px var(--color-darkpurple);
    }
    50% {
      text-shadow:
        0 0 15px var(--color-darkpurple),
        0 0 25px var(--color-darkpurple),
        0 0 35px var(--color-darkpurple),
        0 0 40px var(--color-purple);
    }
  }
  
  /* Boîte UTC */
  .utc-container {
    position: relative;
    z-index: 3;
  }
  
  .utc-badge {
    width: 160px;
    height: auto;
    display: block;
    filter: drop-shadow(0 0 8px rgba(255,255,255,0.4));
    animation: badgePulse 3s ease-in-out infinite;
  }

  @keyframes badgePulse {
    0%, 100% {
      filter: drop-shadow(0 0 8px rgba(255,255,255,0.4));
    }
    50% {
      filter: drop-shadow(0 0 12px rgba(184,187,240,0.7));
    }
  }
  
  /* Textes de localisation */
  .location-info {
    position: absolute;
    bottom: 10px;
    left: 10px;
    text-align: left;
    z-index: 2;
  }
  
  .location-label {
    font-family: var(--font-title2);
    font-size: 10px;
    font-weight: 400;
    color: white;
    letter-spacing: 0.15em;
    margin-bottom: 2px;
  }
  
  .location-value {
    font-family: var(--font-title2);
    font-size: 10px;
    font-weight: 400;
    color: white;
    letter-spacing: 0.15em;
  }
  
  /* Icône clock en bas à droite */
  .clock-icon-bottom {
    position: absolute;
    bottom: 10px;
    right: 10px;
    z-index: 3;
  }
  
  .clock-svg {
    width: 35px;
    height: 35px;
    display: block;
    filter: brightness(0) invert(1) drop-shadow(0 0 5px rgba(255,255,255,0.5));
  }

  /* Rotation uniquement des lignes intérieures */
  .rotating-inner {
    transform-origin: center;
    animation: iconRotate 20s linear infinite;
  }

  @keyframes iconRotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .hud-clock-container {
      max-width: 250px;
      padding: 12px;
    }
    
    .time-blur,
    .time-main {
      font-size: 28px;
    }
    
    .utc-badge {
      width: 80px;
    }
    
    .clock-svg {
      width: 25px;
      height: 25px;
    }
  }
  
  @media (max-width: 480px) {
    .hud-clock-container {
      max-width: 200px;
      padding: 8px;
    }
    
    .time-blur,
    .time-main {
      font-size: 24px;
    }
    
    .utc-badge {
      width: 70px;
    }
    
    .location-label,
    .location-value {
      font-size: 8px;
    }
    
    .clock-svg {
      width: 20px;
      height: 20px;
    }
  }
</style>
