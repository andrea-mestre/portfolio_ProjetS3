---
// Composant d'avertissement spatial pour sections spécifiques
---

<div class="section-warning-overlay" id="section-warning-overlay">
	<div class="warning-container">
		<!-- Cercles de scanner spatial -->
		<div class="scanner-ring ring-1"></div>
		<div class="scanner-ring ring-2"></div>
		<div class="scanner-ring ring-3"></div>
		
		<!-- Élément d'avertissement principal -->
		<div class="warning-box">
			<div class="warning-header">
				<div class="warning-icon">
					<div class="triangle-warning">
						<span class="exclamation">!</span>
					</div>
				</div>
				<div class="warning-text">
					<h3 class="warning-title">ZONE RESTREINTE</h3>
					<p class="warning-subtitle">ACCÈS EN COURS DE VÉRIFICATION</p>
				</div>
			</div>
			
			<!-- Barre de progression -->
			<div class="progress-container">
				<div class="progress-bar">
					<div class="progress-fill"></div>
				</div>
				<div class="progress-text">ANALYSE: <span id="progress-percentage">0</span>%</div>
			</div>
			
			<!-- Bouton de validation -->
			<div class="validation-container" id="validation-container" style="display: none;">
				<button class="validation-button" id="validation-button">
					<span class="button-icon">◉</span>
					<span class="button-text">INITIALISER ACCÈS</span>
				</button>
			</div>
			
			<!-- Éléments HUD additionnels -->
			<div class="hud-corners">
				<div class="corner corner-tl"></div>
				<div class="corner corner-tr"></div>
				<div class="corner corner-bl"></div>
				<div class="corner corner-br"></div>
			</div>
		</div>
		
		<!-- Particules d'énergie -->
		<div class="energy-particles">
			<div class="particle"></div>
			<div class="particle"></div>
			<div class="particle"></div>
			<div class="particle"></div>
			<div class="particle"></div>
		</div>
	</div>
</div>

<style>
	.section-warning-overlay {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		background: rgba(0, 0, 0, 0.95);
		display: flex;
		align-items: center;
		justify-content: center;
		z-index: 9999;
		opacity: 0;
		visibility: hidden;
		transition: opacity 0.3s ease, visibility 0.3s ease;
		backdrop-filter: blur(5px);
	}

	.section-warning-overlay.active {
		opacity: 1;
		visibility: visible;
	}

	.warning-container {
		position: relative;
		width: clamp(320px, 80vw, 600px);
		height: clamp(250px, 50vh, 400px);
	}

	/* Anneaux de scanner */
	.scanner-ring {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		border: 2px solid transparent;
		border-radius: 50%;
		opacity: 0;
		animation: scannerPulse 2s ease-out infinite;
	}

	.ring-1 {
		width: 150px;
		height: 150px;
		border-color: var(--color-purple);
		animation-delay: 0s;
	}

	.ring-2 {
		width: 200px;
		height: 200px;
		border-color: var(--color-darkpurple);
		animation-delay: 0.3s;
	}

	.ring-3 {
		width: 250px;
		height: 250px;
		border-color: #B8BBF0;
		animation-delay: 0.6s;
	}

	@keyframes scannerPulse {
		0% {
			opacity: 0;
			transform: translate(-50%, -50%) scale(0.5);
		}
		50% {
			opacity: 0.8;
			transform: translate(-50%, -50%) scale(1);
		}
		100% {
			opacity: 0;
			transform: translate(-50%, -50%) scale(1.2);
		}
	}

	/* Boîte d'avertissement principale */
	.warning-box {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		background: linear-gradient(135deg, rgba(97, 84, 197, 0.2), rgba(184, 187, 240, 0.1));
		border: 2px solid var(--color-purple);
		border-radius: 8px;
		padding: 2rem;
		min-width: 300px;
		backdrop-filter: blur(10px);
		box-shadow: 
			0 0 30px rgba(97, 84, 197, 0.5),
			inset 0 0 20px rgba(184, 187, 240, 0.1);
		animation: warningGlow 1.5s ease-in-out infinite alternate;
	}

	@keyframes warningGlow {
		0% {
			box-shadow: 
				0 0 30px rgba(97, 84, 197, 0.5),
				inset 0 0 20px rgba(184, 187, 240, 0.1);
		}
		100% {
			box-shadow: 
				0 0 50px rgba(97, 84, 197, 0.8),
				inset 0 0 30px rgba(184, 187, 240, 0.2);
		}
	}

	/* En-tête d'avertissement */
	.warning-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1.5rem;
	}

	.warning-icon {
		width: 60px;
		height: 60px;
		position: relative;
	}

	.triangle-warning {
		width: 100%;
		height: 100%;
		background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
		clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
		display: flex;
		align-items: center;
		justify-content: center;
		animation: trianglePulse 1s ease-in-out infinite;
		box-shadow: 0 0 20px rgba(255, 107, 107, 0.6);
	}

	.exclamation {
		color: white;
		font-weight: bold;
		font-size: 1.5rem;
		margin-top: 10px;
		text-shadow: 0 0 10px rgba(255, 255, 255, 0.8);
		animation: exclamationBlink 0.8s ease-in-out infinite;
	}

	@keyframes trianglePulse {
		0%, 100% {
			transform: scale(1);
		}
		50% {
			transform: scale(1.1);
		}
	}

	@keyframes exclamationBlink {
		0%, 50%, 100% {
			opacity: 1;
		}
		25%, 75% {
			opacity: 0.3;
		}
	}

	.warning-text {
		flex: 1;
	}

	.warning-title {
		font-family: var(--font-title2);
		font-size: 1.5rem;
		color: #ff6b6b;
		margin: 0 0 0.5rem 0;
		letter-spacing: 0.1em;
		text-shadow: 0 0 10px rgba(255, 107, 107, 0.6);
		animation: textFlicker 2s ease-in-out infinite;
	}

	.warning-subtitle {
		font-family: var(--font-text);
		font-size: 0.9rem;
		color: #B8BBF0;
		margin: 0;
		letter-spacing: 0.05em;
		opacity: 0.8;
	}

	@keyframes textFlicker {
		0%, 100% {
			text-shadow: 0 0 10px rgba(255, 107, 107, 0.6);
		}
		50% {
			text-shadow: 0 0 20px rgba(255, 107, 107, 0.9);
		}
	}

	/* Barre de progression */
	.progress-container {
		margin-bottom: 1rem;
	}

	.progress-bar {
		width: 100%;
		height: 8px;
		background: rgba(184, 187, 240, 0.2);
		border-radius: 4px;
		overflow: hidden;
		border: 1px solid var(--color-purple);
		margin-bottom: 0.5rem;
	}

	.progress-fill {
		height: 100%;
		background: linear-gradient(90deg, var(--color-purple), #B8BBF0);
		width: 0%;
		border-radius: 4px;
		animation: progressAnimation 3s ease-out forwards;
		box-shadow: 0 0 10px var(--color-purple);
	}

	@keyframes progressAnimation {
		0% {
			width: 0%;
		}
		100% {
			width: 100%;
		}
	}

	.progress-text {
		font-family: var(--font-text);
		font-size: 0.8rem;
		color: #B8BBF0;
		text-align: center;
		letter-spacing: 0.1em;
	}

	/* Bouton de validation */
	.validation-container {
		display: flex;
		justify-content: center;
		margin-top: 1rem;
		opacity: 0;
		transform: translateY(20px);
		transition: all 0.5s ease;
	}

	.validation-container.show {
		opacity: 1;
		transform: translateY(0);
	}

	.validation-button {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.8rem 1.5rem;
		background: linear-gradient(45deg, rgba(184, 187, 240, 0.2), rgba(97, 84, 197, 0.3));
		border: 2px solid var(--color-purple);
		border-radius: 6px;
		color: #B8BBF0;
		font-family: var(--font-text);
		font-weight: bold;
		font-size: 0.9rem;
		letter-spacing: 0.15em;
		cursor: pointer;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
		backdrop-filter: blur(10px);
		box-shadow: 
			0 0 20px rgba(184, 187, 240, 0.3),
			inset 0 0 10px rgba(184, 187, 240, 0.1);
		animation: buttonPulseHUD 2s ease-in-out infinite;
	}

	.validation-button::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(184, 187, 240, 0.3), transparent);
		transition: left 0.8s ease;
	}

	.validation-button:hover::before {
		left: 100%;
	}

	.validation-button:hover {
		transform: scale(1.05);
		border-color: #B8BBF0;
		color: white;
		text-shadow: 0 0 10px rgba(184, 187, 240, 0.8);
		box-shadow: 
			0 0 30px rgba(184, 187, 240, 0.6),
			inset 0 0 15px rgba(184, 187, 240, 0.2);
	}

	.validation-button:active {
		transform: scale(0.98);
	}

	.button-icon {
		font-size: 1.2rem;
		animation: iconPulseHUD 2s ease-in-out infinite;
		text-shadow: 0 0 10px currentColor;
	}

	.button-text {
		white-space: nowrap;
		position: relative;
		z-index: 1;
	}

	@keyframes buttonPulseHUD {
		0%, 100% {
			box-shadow: 
				0 0 20px rgba(184, 187, 240, 0.3),
				inset 0 0 10px rgba(184, 187, 240, 0.1);
			border-color: var(--color-purple);
		}
		50% {
			box-shadow: 
				0 0 30px rgba(184, 187, 240, 0.5),
				inset 0 0 15px rgba(184, 187, 240, 0.2);
			border-color: #B8BBF0;
		}
	}

	@keyframes iconPulseHUD {
		0%, 100% {
			transform: scale(1);
			opacity: 0.8;
		}
		50% {
			transform: scale(1.1);
			opacity: 1;
		}
	}

	/* Coins HUD */
	.hud-corners {
		position: absolute;
		top: -10px;
		left: -10px;
		right: -10px;
		bottom: -10px;
		pointer-events: none;
	}

	.corner {
		position: absolute;
		width: 20px;
		height: 20px;
		border: 2px solid var(--color-purple);
		animation: cornerPulse 2s ease-in-out infinite;
	}

	.corner-tl {
		top: 0;
		left: 0;
		border-right: none;
		border-bottom: none;
	}

	.corner-tr {
		top: 0;
		right: 0;
		border-left: none;
		border-bottom: none;
	}

	.corner-bl {
		bottom: 0;
		left: 0;
		border-right: none;
		border-top: none;
	}

	.corner-br {
		bottom: 0;
		right: 0;
		border-left: none;
		border-top: none;
	}

	@keyframes cornerPulse {
		0%, 100% {
			opacity: 0.5;
			border-color: var(--color-purple);
		}
		50% {
			opacity: 1;
			border-color: #B8BBF0;
			box-shadow: 0 0 5px var(--color-purple);
		}
	}

	/* Particules d'énergie */
	.energy-particles {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
	}

	.particle {
		position: absolute;
		width: 4px;
		height: 4px;
		background: var(--color-purple);
		border-radius: 50%;
		animation: particleFloat 3s ease-in-out infinite;
		box-shadow: 0 0 6px var(--color-purple);
	}

	.particle:nth-child(1) {
		top: 20%;
		left: 10%;
		animation-delay: 0s;
	}

	.particle:nth-child(2) {
		top: 60%;
		left: 80%;
		animation-delay: 0.6s;
	}

	.particle:nth-child(3) {
		top: 80%;
		left: 20%;
		animation-delay: 1.2s;
	}

	.particle:nth-child(4) {
		top: 30%;
		left: 90%;
		animation-delay: 1.8s;
	}

	.particle:nth-child(5) {
		top: 10%;
		left: 60%;
		animation-delay: 2.4s;
	}

	@keyframes particleFloat {
		0%, 100% {
			transform: translateY(0px) scale(1);
			opacity: 0.3;
		}
		50% {
			transform: translateY(-20px) scale(1.2);
			opacity: 1;
		}
	}

	/* Responsive */
	@media (max-width: 768px) {
		.warning-box {
			padding: 1.5rem;
			min-width: 280px;
		}

		.warning-title {
			font-size: 1.2rem;
		}

		.warning-icon {
			width: 50px;
			height: 50px;
		}

		.exclamation {
			font-size: 1.2rem;
		}
	}
</style>

<script>
	interface SectionWarningOptions {
		targetSection: string;
		triggerOffset?: number;
		warningDuration?: number;
		contentRevealDelay?: number;
	}

	class SectionWarningHUD {
		private overlay: HTMLElement | null;
		private progressPercentage: HTMLElement | null;
		private isActive: boolean = false;
		private hasBeenTriggered: boolean = false; // Nouveau flag pour éviter les déclenchements multiples
		private options: Required<SectionWarningOptions>;

		constructor(options: SectionWarningOptions) {
			this.options = {
				triggerOffset: 50,
				warningDuration: 3000,
				contentRevealDelay: 300,
				...options
			};

			this.overlay = document.getElementById('section-warning-overlay');
			this.progressPercentage = document.getElementById('progress-percentage');
			
			this.init();
		}

		private init(): void {
			window.addEventListener('scroll', this.handleScroll.bind(this));
		}

		private handleScroll(): void {
			// Ne pas déclencher si déjà actif ou si déjà déclenché précédemment
			if (this.isActive || this.hasBeenTriggered) return;

			const targetSection = document.querySelector(this.options.targetSection) as HTMLElement;
			if (!targetSection) return;

			const rect = targetSection.getBoundingClientRect();
			const viewportHeight = window.innerHeight;

			// Déclencher seulement quand la section occupe une grande partie de l'écran
			// La section doit être centrée dans le viewport
			if (rect.top <= viewportHeight * 0.1 && rect.bottom >= viewportHeight * 0.5) {
				this.showWarning();
			}
		}

		private showWarning(): void {
			if (this.isActive || !this.overlay || this.hasBeenTriggered) return;

			this.isActive = true;
			this.hasBeenTriggered = true; // Marquer comme déclenché pour éviter les futurs déclenchements
			this.overlay.classList.add('active');

			// Bloquer le scroll
			this.disableScroll();

			// Animation du pourcentage
			this.animateProgress();

			// Ne plus masquer automatiquement - attendre le clic
		}

		private disableScroll(): void {
			// Sauvegarder la position actuelle du scroll
			const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
			
			// Ajouter les styles pour bloquer le scroll
			document.body.style.position = 'fixed';
			document.body.style.top = `-${scrollTop}px`;
			document.body.style.width = '100%';
			document.body.style.overflow = 'hidden';
		}

		private enableScroll(): void {
			// Récupérer la position sauvegardée
			const scrollY = document.body.style.top;
			
			// Restaurer les styles
			document.body.style.position = '';
			document.body.style.top = '';
			document.body.style.width = '';
			document.body.style.overflow = '';
			
			// Restaurer la position du scroll
			if (scrollY) {
				window.scrollTo(0, parseInt(scrollY || '0') * -1);
			}
		}

		private animateProgress(): void {
			if (!this.progressPercentage) return;

			let progress = 0;
			const interval = setInterval(() => {
				progress += Math.random() * 15 + 5; // Progression irrégulière
				if (progress >= 100) {
					progress = 100;
					clearInterval(interval);
					
					// Afficher le bouton de validation après la progression
					setTimeout(() => {
						this.showValidationButton();
					}, 500);
				}
				this.progressPercentage!.textContent = Math.round(progress).toString();
			}, 100);
		}

		private showValidationButton(): void {
			const validationContainer = document.getElementById('validation-container');
			const validationButton = document.getElementById('validation-button');
			
			if (validationContainer && validationButton) {
				validationContainer.style.display = 'flex';
				setTimeout(() => {
					validationContainer.classList.add('show');
				}, 50);
				
				// Ajouter l'événement de clic
				validationButton.addEventListener('click', () => {
					this.hideWarning();
				});
			}
		}

		private hideWarning(): void {
			if (!this.overlay) return;

			this.overlay.classList.remove('active');

			// Réactiver le scroll
			this.enableScroll();

			// Révéler le contenu de la section après un délai
			setTimeout(() => {
				this.revealSectionContent();
				this.isActive = false;
				// Note: hasBeenTriggered reste à true pour éviter les futurs déclenchements
			}, this.options.contentRevealDelay);
		}

		private revealSectionContent(): void {
			const targetSection = document.querySelector(this.options.targetSection) as HTMLElement;
			if (!targetSection) return;

			// Ajouter une classe pour révéler le contenu avec animation
			targetSection.classList.add('section-revealed');

			// Déclencher un événement personnalisé
			const event = new CustomEvent('sectionRevealed', {
				detail: { section: this.options.targetSection }
			});
			window.dispatchEvent(event);
		}

		// Méthode publique pour déclencher manuellement
		public trigger(): void {
			if (!this.isActive && !this.hasBeenTriggered) {
				this.showWarning();
			}
		}

		// Méthode publique pour réinitialiser complètement
		public reset(): void {
			this.isActive = false;
			this.hasBeenTriggered = false; // Permettre un nouveau déclenchement
			
			// Réactiver le scroll si nécessaire
			this.enableScroll();
			
			if (this.overlay) {
				this.overlay.classList.remove('active');
			}
			
			// Réinitialiser le bouton de validation
			const validationContainer = document.getElementById('validation-container');
			if (validationContainer) {
				validationContainer.style.display = 'none';
				validationContainer.classList.remove('show');
			}
			
			// Réinitialiser le pourcentage
			if (this.progressPercentage) {
				this.progressPercentage.textContent = '0';
			}
			
			// Réinitialiser la section
			const targetSection = document.querySelector(this.options.targetSection) as HTMLElement;
			if (targetSection) {
				targetSection.classList.remove('section-revealed');
				targetSection.classList.add('section-hidden');
			}
		}
	}

	// Initialisation automatique quand le DOM est prêt
	document.addEventListener('DOMContentLoaded', () => {
		// Configuration pour déclencher sur la section À PROPOS avec la classe section-hidden
		const warningHUD = new SectionWarningHUD({
			targetSection: '.section-hidden', // Sélecteur spécifique pour la section À PROPOS
			triggerOffset: 10, // Distance très réduite pour déclencher encore plus bas dans le scroll
			warningDuration: 3000,
			contentRevealDelay: 500
		});

		// Exposer globalement pour utilisation externe si nécessaire
		(window as any).sectionWarningHUD = warningHUD;
	});
</script>