---
// Header HUD - Navigation futuriste
---

<header class="hud-header">
  <!-- Navigation -->
  <nav class="hud-nav">
    <a href="#projets" class="nav-button">
      <span class="button-text">PROJETS</span>
      <span class="button-scan"></span>
    </a>
    <a href="#contact" class="nav-button">
      <span class="button-text">CONTACT</span>
      <span class="button-scan"></span>
    </a>
  </nav>
</header>

<style>
  .hud-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 80px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 2rem;
    z-index: 100;
    background: linear-gradient(180deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 100%);
    border-bottom: 1px solid rgba(255,255,255,0.1);
    animation: headerSlideDown 1s ease-out 2s backwards;
  }

  @keyframes headerSlideDown {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .hud-nav {
    display: flex;
    gap: 2rem;
    animation: fadeIn 1s ease-out 2.8s backwards;
  }

  .nav-button {
    position: relative;
    padding: 12px 32px;
    font-family: var(--font-smalltext);
    font-size: 14px;
    letter-spacing: 0.2em;
    color: white;
    text-decoration: none;
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.3);
    clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .nav-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(184,187,240,0.3), transparent);
    transition: left 0.5s ease;
  }

  .nav-button:hover {
    border-color: var(--color-purple);
    box-shadow: 0 0 20px rgba(184,187,240,0.4);
    transform: translateY(-2px);
  }

  .nav-button:hover::before {
    left: 100%;
  }

  .button-text {
    position: relative;
    z-index: 1;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @media (max-width: 768px) {
    .hud-header {
      height: 60px;
      padding: 0 1rem;
    }

    .header-corner-left,
    .header-corner-right {
      width: 60px;
      height: 60px;
    }

    .hud-nav {
      gap: 1rem;
    }

    .nav-button {
      padding: 8px 16px;
      font-size: 12px;
    }
  }
</style>
