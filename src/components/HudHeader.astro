---
export interface Props {
	currentPage?: 'home' | 'contact' | 'projets' | 'mentions-legales';
}

const { currentPage = 'home' } = Astro.props;
const headerClass = currentPage === 'home' ? 'header-slide' : '';
const navClass = currentPage === 'home' ? 'nav-fade' : '';
---

<header class={`fixed top-0 left-0 right-0 h-14 flex justify-center items-center px-6 z-[100] bg-gradient-to-b from-black/80 to-transparent border-b border-white/10 ${headerClass}`}>
  <nav class={`flex gap-5 ${navClass}`}>
    {currentPage !== 'home' && (
      <a href="/" class="nav-button relative px-5 py-2 font-mono text-xs tracking-[0.15em] text-white no-underline bg-white/5 border border-white/30 overflow-hidden transition-all duration-300 hover:border-[--color-purple] hover:shadow-[0_0_20px_rgba(184,187,240,0.4)] hover:-translate-y-0.5">
        <span class="relative">ACCUEIL</span>
      </a>
    )}
    {currentPage !== 'projets' && (
      <a href="/projets" class="nav-button relative px-5 py-2 font-mono text-xs tracking-[0.15em] text-white no-underline bg-white/5 border border-white/30 overflow-hidden transition-all duration-300 hover:border-[--color-purple] hover:shadow-[0_0_20px_rgba(184,187,240,0.4)] hover:-translate-y-0.5">
        <span class="relative">PROJETS</span>
      </a>
    )}
    {currentPage !== 'contact' && (
      <a href="/contact" class="nav-button relative px-5 py-2 font-mono text-xs tracking-[0.15em] text-white no-underline bg-white/5 border border-white/30 overflow-hidden transition-all duration-300 hover:border-[--color-purple] hover:shadow-[0_0_20px_rgba(184,187,240,0.4)] hover:-translate-y-0.5">
        <span class="relative">CONTACT</span>
      </a>
    )}
    {currentPage !== 'mentions-legales' && (
      <a href="/mentions-legales" class="nav-button relative px-5 py-2 font-mono text-xs tracking-[0.15em] text-white no-underline bg-white/5 border border-white/30 overflow-hidden transition-all duration-300 hover:border-[--color-purple] hover:shadow-[0_0_20px_rgba(184,187,240,0.4)] hover:-translate-y-0.5">
        <span class="relative">MENTIONS</span>
      </a>
    )}
  </nav>
</header>

<style>
  .header-slide {
    opacity: 0;
    transform: translateY(-100%);
    animation: headerSlideDown 1s ease-out 2s forwards;
  }

  .nav-fade {
    opacity: 0;
    animation: fadeIn 1s ease-out 2.8s forwards;
  }

  @keyframes headerSlideDown {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .nav-button {
    clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
  }

  .nav-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(184,187,240,0.3), transparent);
    transition: left 0.5s ease;
  }

  .nav-button:hover::before {
    left: 100%;
  }

  @media (max-width: 768px) {
    header {
      height: 50px;
      padding: 0 0.5rem;
      backdrop-filter: blur(10px);
    }

    nav {
      gap: 0.5rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .nav-button {
      padding: 0.4rem 0.6rem;
      font-size: 0.6rem;
      letter-spacing: 0.1em;
      min-width: fit-content;
    }

    .nav-button span {
      white-space: nowrap;
    }
  }

  @media (max-width: 480px) {
    header {
      height: auto;
      min-height: 50px;
      padding: 0.5rem;
    }

    nav {
      gap: 0.4rem;
      width: 100%;
    }

    .nav-button {
      padding: 0.4rem 0.5rem;
      font-size: 0.55rem;
      letter-spacing: 0.08em;
      flex: 1;
      min-width: 70px;
      text-align: center;
    }
  }

  @media (max-width: 360px) {
    nav {
      gap: 0.3rem;
    }

    .nav-button {
      padding: 0.35rem 0.4rem;
      font-size: 0.5rem;
      min-width: 60px;
    }
  }
</style>
