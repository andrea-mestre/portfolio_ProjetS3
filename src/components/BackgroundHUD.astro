---
import BackgroundContactSvg from '../assets/svg/background_contact.svg?raw';
---

<div class="hud-background" set:html={BackgroundContactSvg}></div>

<style>
	/* Background HUD */
	.hud-background {
		position: fixed;
		top: 120px;
		left: 300px;
		right: 1000px;
		width: 90vw;
		max-width: 1200px;
		height: auto;
		
		z-index: 1;
		pointer-events: none;
		overflow: visible;
	}

	.hud-background svg {
		width: 100%;
		height: auto;
		object-fit: contain;
		opacity: 1;
		filter: brightness(1.8) contrast(1.5);
	}
</style>