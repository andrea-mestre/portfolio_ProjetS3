---
import PurpleBackgroundSvg from '../assets/svg/purple_background.svg?raw';
---

<div class="form-container">
	<div class="form-background" set:html={PurpleBackgroundSvg}></div>
	<div class="form-content">
		<form class="contact-form">
			<div class="form-row">
				<div class="form-field">
					<label class="form-label">PRÉNOM</label>
					<input type="text" name="prenom" required class="form-input">
				</div>
				<div class="form-field">
					<label class="form-label">NOM</label>
					<input type="text" name="nom" required class="form-input">
				</div>
			</div>
			
			<div class="form-field">
				<label class="form-label">E-MAIL</label>
				<input type="email" name="email" required class="form-input">
			</div>
			
			<div class="form-field">
				<label class="form-label">SUJET</label>
				<input type="text" name="sujet" required class="form-input">
			</div>
			
			<div class="form-field">
				<label class="form-label">MESSAGE</label>
				<textarea name="message" rows="6" required class="form-textarea"></textarea>
			</div>
			
			<button type="submit" class="form-submit">
				<span class="arrow-left">⟨</span>
				ENVOYER
				<span class="arrow-right">⟩</span>
			</button>
		</form>
	</div>
</div>

<style>
	.form-container {
		position: relative;
		width: 100%;
		height: auto;
		display: flex;
		flex-direction: column;
	}

	.form-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: 1;
		pointer-events: none;
	}

	.form-background svg {
		width: 100%;
		height: 100%;
		object-fit: fill;
		display: block;
	}

	.form-content {
		position: relative;
		z-index: 2;
		padding: 2rem;
		flex-shrink: 0;
	}

	.contact-form {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		width: 100%;
	}

	.form-row {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
	}

	.form-field {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.form-label {
		font-family: var(--font-smalltext), 'Share Tech Mono', monospace;
		font-size: 11px;
		color: white;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		font-weight: 400;
	}

	.form-input, .form-textarea {
		background: rgba(255, 255, 255, 0.95);
		border: none;
		border-radius: 8px;
		padding: 0.75rem 1rem;
		font-family: var(--font-smalltext), 'Share Tech Mono', monospace;
		font-size: 14px;
		color: #333;
		transition: all 0.3s ease;
	}

	.form-input:focus, .form-textarea:focus {
		outline: none;
		background: rgba(255, 255, 255, 1);
		box-shadow: 0 0 0 2px rgba(150, 46, 185, 0.5);
	}

	.form-textarea {
		resize: none;
		min-height: 120px;
	}

	.form-submit {
		background: transparent;
		border: 2px solid white;
		color: white;
		padding: 1rem 2rem;
		font-family: var(--font-smalltext), 'Share Tech Mono', monospace;
		font-size: 12px;
		letter-spacing: 0.2em;
		text-transform: uppercase;
		cursor: pointer;
		align-self: center;
		margin-top: 1rem;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		transition: all 0.3s ease;
		border-radius: 4px;
	}

	.form-submit:hover {
		background: white;
		color: #333;
	}

	.arrow-left, .arrow-right {
		font-size: 16px;
		font-weight: bold;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.form-row {
			grid-template-columns: 1fr;
		}
		
		.form-content {
			padding: 1.5rem;
		}
	}
</style>