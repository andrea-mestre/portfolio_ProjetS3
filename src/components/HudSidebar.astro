---
// Sidebar HUD - Logo Portfolio vertical
import logoPortfolio from '../assets/svg/logo_portfolio.svg';
---

<aside class="hud-sidebar">
  <div class="portfolio-logo">
    <img src={logoPortfolio.src} alt="Portfolio" />
  </div>
</aside>

<style>
  .hud-sidebar {
    position: absolute !important;
    left: 1.5rem;
    top: 0;
    height: 100vh;
    display: flex;
    align-items: center;
    z-index: 9999 !important;
    opacity: 0;
    animation: fadeInSidebar 1s ease-out 2s forwards;
  }

  @keyframes fadeInSidebar {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Logo Portfolio vertical */
  .portfolio-logo {
    writing-mode: vertical-rl;
    transform: rotate(0deg);
  }

  .portfolio-logo img {
    height: calc(100vh - 150px);
    width: auto;
    filter: drop-shadow(0 0 10px rgba(255,255,255,0.3));
  }

  @media (max-width: 768px) {
    .hud-sidebar {
      left: 0.5rem;
    }

    .portfolio-logo img {
      height: calc(100vh - 180px);
    }
  }

  @media (max-width: 480px) {
    .hud-sidebar {
      left: 0.25rem;
    }
    
    .portfolio-logo img {
      height: calc(100vh - 200px);
    }
  }
</style>
