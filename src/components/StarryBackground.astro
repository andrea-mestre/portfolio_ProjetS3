<style>
  .starry-background {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    width: 100vw !important;
    height: 100vh !important;
    background-color: #000000 !important;
    z-index: -1 !important;
    pointer-events: none !important;
    overflow: hidden !important;
  }
  
  /* Étoiles statiques - Base */
  .star {
    position: absolute !important;
    background-color: white !important;
    border-radius: 50% !important;
    animation: twinkle 3s ease-in-out infinite !important;
  }
  
  /* Très petites étoiles */
  .star.tiny {
    width: 1px !important;
    height: 1px !important;
    box-shadow: 0 0 2px rgba(255, 255, 255, 0.5) !important;
    opacity: 0.6 !important;
  }
  
  /* Petites étoiles */
  .star.small {
    width: 2px !important;
    height: 2px !important;
    box-shadow: 0 0 3px rgba(255, 255, 255, 0.6) !important;
  }
  
  /* Étoiles moyennes */
  .star.medium {
    width: 3px !important;
    height: 3px !important;
    box-shadow: 0 0 6px rgba(255, 255, 255, 0.8) !important;
  }
  
  /* Grandes étoiles */
  .star.large {
    width: 4px !important;
    height: 4px !important;
    box-shadow: 0 0 8px rgba(255, 255, 255, 1), 0 0 12px rgba(255, 255, 255, 0.5) !important;
    animation: twinkle-bright 2s ease-in-out infinite !important;
  }
  
  /* Animation de scintillement standard */
  @keyframes twinkle {
    0%, 100% {
      opacity: 0.3 !important;
      transform: scale(0.8) !important;
    }
    50% {
      opacity: 1 !important;
      transform: scale(1.2) !important;
    }
  }
  
  /* Animation de scintillement pour grandes étoiles */
  @keyframes twinkle-bright {
    0%, 100% {
      opacity: 0.6 !important;
      transform: scale(0.9) !important;
    }
    50% {
      opacity: 1 !important;
      transform: scale(1.4) !important;
    }
  }
  
  /* Variations de timing pour les étoiles */
  .star:nth-child(2n) {
    animation-delay: 0.5s !important;
  }
  
  .star:nth-child(3n) {
    animation-delay: 1s !important;
    animation-duration: 4s !important;
  }
  
  .star:nth-child(4n) {
    animation-delay: 1.5s !important;
  }
  
  .star:nth-child(5n) {
    animation-delay: 2s !important;
    animation-duration: 5s !important;
  }
  
  /* Étoiles filantes */
  .shooting-star {
    position: absolute !important;
    width: 3px !important;
    height: 3px !important;
    background: white !important;
    border-radius: 50% !important;
    box-shadow: 0 0 8px 3px rgba(255, 255, 255, 1) !important;
    animation: shoot 4s linear infinite !important;
  }
  
  .shooting-star::before {
    content: '' !important;
    position: absolute !important;
    top: 50% !important;
    right: 3px !important;
    width: 100px !important;
    height: 2px !important;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.9), white) !important;
    transform: translateY(-50%) !important;
    border-radius: 50% !important;
  }
  
  /* Positionnement et délais pour chaque étoile filante */
  .shooting-star-1 {
    top: 15% !important;
    left: 0% !important;
    animation-delay: 0s !important;
  }
  
  .shooting-star-2 {
    top: 35% !important;
    left: 0% !important;
    animation-delay: 2s !important;
  }
  
  .shooting-star-3 {
    top: 55% !important;
    left: 0% !important;
    animation-delay: 4s !important;
  }
  
  .shooting-star-4 {
    top: 25% !important;
    left: 0% !important;
    animation-delay: 6s !important;
  }
  
  .shooting-star-5 {
    top: 75% !important;
    left: 0% !important;
    animation-delay: 8s !important;
  }
  
  /* Animation des étoiles filantes */
  @keyframes shoot {
    0% {
      transform: translateX(-10px) translateY(0) !important;
      opacity: 0 !important;
    }
    10% {
      opacity: 1 !important;
    }
    90% {
      opacity: 1 !important;
    }
    100% {
      transform: translateX(100vw) translateY(50vh) !important;
      opacity: 0 !important;
    }
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .shooting-star::before {
      width: 60px !important;
    }
    
    @keyframes shoot {
      0% {
        transform: translateX(-10px) translateY(0) !important;
        opacity: 0 !important;
      }
      10% {
        opacity: 1 !important;
      }
      90% {
        opacity: 1 !important;
      }
      100% {
        transform: translateX(100vw) translateY(40vh) !important;
        opacity: 0 !important;
      }
    }
  }
</style>

