---
const currentYear = new Date().getFullYear();
import chevronIcon from "../assets/icons/chevron.svg";
---

<footer class="footer">
	<div class="footer-content">
		<div class="footer-left">
			<p class="copyright">© {currentYear} Andréa Mestre</p>
		</div>
        
		<div class="footer-center">
			<a href="/mentions-legales" class="footer-link">Mentions légales</a>
		</div>
        
		<div class="footer-right">
			<a href="https://www.linkedin.com" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="LinkedIn">
				<svg class="social-icon" viewBox="0 0 24 24" fill="currentColor">
					<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
				</svg>
			</a>
            
			<a href="https://www.behance.net" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Behance">
				<svg class="social-icon" viewBox="0 0 24 24" fill="currentColor">
					<path d="M22 7h-7v-2h7v2zm1.726 10c-.442 1.297-2.029 3-5.101 3-3.074 0-5.564-1.729-5.564-5.675 0-3.91 2.325-5.92 5.466-5.92 3.082 0 4.964 1.782 5.375 4.426.078.506.109 1.188.095 2.14h-8.027c.13 3.211 3.483 3.312 4.588 2.029h3.168zm-7.686-4h4.965c-.105-1.547-1.136-2.219-2.477-2.219-1.466 0-2.277.768-2.488 2.219zm-9.574 6.988h-6.466v-14.967h6.953c5.476.081 5.58 5.444 2.72 6.906 3.461 1.26 3.577 8.061-3.207 8.061zm-3.466-8.988h3.584c2.508 0 2.906-3-.312-3h-3.272v3zm3.391 3h-3.391v3.016h3.341c3.055 0 2.868-3.016.05-3.016z"/>
				</svg>
			</a>
			<!-- Chevron pour remonter la page -->
			<button class="chevron-up-btn" aria-label="Remonter la page" onclick="window.scrollTo({top:0,behavior:'smooth'})" style="background:none;border:none;padding:0;margin-left:1.5rem;cursor:pointer;display:flex;align-items:center;">
				<img src={chevronIcon.src} alt="Remonter" class="chevron-up-icon" style="width:20px;height:20px;filter:drop-shadow(0 0 8px #A259FF);transition:transform 0.3s;" />
			</button>
		</div>
	</div>
</footer>

<style>
	.footer {
		width: 100%;
		background-color: #000;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		padding: 1.5rem 2rem;
		margin-top: auto;
	}

	.footer-content {
		max-width: 1400px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 2rem;
	}

	.footer-left,
	.footer-center,
	.footer-right {
		display: flex;
		align-items: center;
	}

	.footer-left {
		flex: 1;
	}

	.footer-center {
		flex: 1;
		justify-content: center;
	}

	.footer-right {
		flex: 1;
		justify-content: flex-end;
		gap: 2.5rem;
	}
	.chevron-up-btn:hover .chevron-up-icon {
		transform: translateY(-6px) scale(1.15);
		filter: drop-shadow(0 0 16px #A259FF);
	}

	.copyright {
		font-family: var(--font-text);
		font-size: 0.875rem;
		color: rgba(255, 255, 255, 0.7);
		margin: 0;
	}

	.footer-link {
		font-family: var(--font-text);
		font-size: 0.875rem;
		color: rgba(255, 255, 255, 0.7);
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.footer-link:hover {
		color: rgba(255, 255, 255, 1);
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		color: rgba(255, 255, 255, 0.7);
		transition: all 0.3s ease;
	}

	.social-link:hover {
		color: rgba(255, 255, 255, 1);
		transform: translateY(-2px);
	}

	.social-icon {
		width: 20px;
		height: 20px;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.footer {
			padding: 1.5rem 1rem;
		}

		.footer-content {
			flex-direction: column;
			gap: 1rem;
			text-align: center;
		}

		.footer-left,
		.footer-center,
		.footer-right {
			justify-content: center;
			width: 100%;
		}

		.footer-right {
			gap: 2rem;
		}
	}
</style>
