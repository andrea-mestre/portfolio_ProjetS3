---
import Layout from '../layouts/Layout.astro';
import StarryBackground from '../components/StarryBackground.astro';
import HudHeader from '../components/HudHeader.astro';
import HudSidebar from '../components/HudSidebar.astro';
import HeroSection from '../components/HeroSection.astro';
import HudClock from '../components/HudClock.astro';
import GlobeCanvas from '../components/GlobeCanvas.astro';
import WarningHUD from '../components/WarningHUD.astro';
---

<Layout>
	<StarryBackground />
	<HudHeader />
	<HudSidebar />
	
	<main class="relative z-10">
		<HeroSection>
			<!-- Globe 3D animé -->
			<GlobeCanvas />
			
			<h1 class="hero-name">ANDREA MESTRE</h1>
			<div class="hero-title-wrapper">
				<div class="title-line"></div>
				<p class="hero-title">WEB DESIGNER</p>
				<div class="title-line"></div>
			</div>
		</HeroSection>

		<!-- Section supplémentaire pour permettre le scroll -->
		<section class="scroll-section">
			<div class="scroll-content">
				
		</section>

		<section class="scroll-section">
			<div class="scroll-content">
			
		</section>

		<section class="scroll-section">
			<div class="scroll-content">
				<h2>CONTACT</h2>
				<p>Entrons en contact pour vos projets...</p>
			</div>
		</section>
	</main>
	
	<!-- HUD Clock en bas à droite -->
	<div class="hud-clock-hero">
		<HudClock />
	</div>

	<!-- Warning HUD pour les erreurs de scroll -->
	<WarningHUD />
</Layout>

<style>
	main .hero-name {
		font-family: var(--font-title2) !important;
		font-size: clamp(64px, 10vw, 120px) !important;
		color: white !important;
		text-align: center;
		letter-spacing: 0.15em;
		margin: 2rem 0;
		white-space: nowrap;
		position: relative;
		z-index: 1;
		opacity: 0;
		transform: translateX(-50px);
		animation: nameSweep 1.2s ease-out 2s forwards, neonPulse 3s ease-in-out 3.5s infinite;
		text-shadow: 
			0 0 5px #fff,
			0 0 10px rgba(184,187,240,0.8),
			0 0 20px rgba(184,187,240,0.6),
			0 0 40px rgba(184,187,240,0.4);
	}

	@keyframes nameSweep {
		0% {
			opacity: 0;
			transform: translateX(-50px);
			filter: blur(10px);
		}
		60% {
			transform: translateX(5px);
		}
		100% {
			opacity: 1;
			transform: translateX(0);
			filter: blur(0);
		}
	}

	@keyframes neonPulse {
		0%, 100% {
			text-shadow: 
				0 0 5px #fff,
				0 0 10px rgba(184,187,240,0.8),
				0 0 20px rgba(184,187,240,0.6),
				0 0 40px rgba(184,187,240,0.4);
		}
		50% {
			text-shadow: 
				0 0 8px #fff,
				0 0 15px rgba(184,187,240,0.9),
				0 0 30px rgba(184,187,240,0.7),
				0 0 50px rgba(184,187,240,0.5);
		}
	}

	main .hero-title-wrapper {
		display: flex;
		align-items: center;
		gap: 2rem;
		margin: 1rem 0 3rem;
		position: relative;
		opacity: 0;
		animation: titleReveal 1s ease-out 3.2s forwards;
		z-index: 1;
	}

	@keyframes titleReveal {
		from {
			opacity: 0;
			letter-spacing: 0.5em;
		}
		to {
			opacity: 1;
			letter-spacing: 0.3em;
		}
	}

	main .title-line {
		width: 60px;
		height: 1px;
		background: linear-gradient(90deg, transparent, var(--color-purple), transparent);
		animation: lineExpand 1.5s ease-out 3.2s backwards;
	}

	@keyframes lineExpand {
		from {
			width: 0;
		}
		to {
			width: 60px;
		}
	}

	main .hero-title {
		font-family: var(--font-smalltext) !important;
		font-size: clamp(18px, 3vw, 24px) !important;
		color: var(--color-purple) !important;
		letter-spacing: 0.3em !important;
		white-space: nowrap;
		text-shadow: 
			0 0 10px rgba(184,187,240,0.6),
			0 0 20px rgba(184,187,240,0.4) !important;
		animation: textGlow 3s ease-in-out infinite !important;
	}

	@keyframes textGlow {
		0%, 100% {
			text-shadow: 
				0 0 10px rgba(184,187,240,0.6),
				0 0 20px rgba(184,187,240,0.4);
		}
		50% {
			text-shadow: 
				0 0 15px rgba(184,187,240,0.8),
				0 0 30px rgba(184,187,240,0.6);
		}
	}

	/* Sections pour permettre le scroll */
	.scroll-section {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 4rem 2rem;
		border-top: 1px solid rgba(184, 187, 240, 0.2);
	}

	.scroll-content {
		text-align: center;
		max-width: 800px;
	}

	.scroll-content h2 {
		font-family: var(--font-title2);
		font-size: clamp(32px, 6vw, 48px);
		color: var(--color-purple);
		margin-bottom: 2rem;
		letter-spacing: 0.2em;
	}

	.scroll-content p {
		font-family: var(--font-text);
		font-size: clamp(16px, 2.5vw, 20px);
		color: rgba(255, 255, 255, 0.7);
		line-height: 1.6;
	}

	/* Fix pour HUD Clock dans la hero section */
	.hud-clock-hero {
		position: absolute !important;
		bottom: 2rem;
		right: 2rem;
		z-index: 9999 !important;
	}
</style>