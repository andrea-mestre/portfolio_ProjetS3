<style>
	.contact-main {
		min-height: 100vh;
		padding: 8rem 2rem 4rem;
		position: relative;
		z-index: 10;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	/* Background HUD */
	.hud-background {
		position: fixed;
		top: 120px;
		left: 0;
		width: 100vw;
		height: calc(100vh - 120px);
		z-index: 1;
		pointer-events: none;
		overflow: hidden;
	}

	.background-svg {
		width: 100%;
		height: 100%;
		object-fit: cover;
		opacity: 0.6;
		filter: brightness(1.5) contrast(1.2);
	}

	/* Cadre HUD principal */
	.hud-frame {
		width: 100%;
		max-width: 1200px;
		min-height: 600px;
		background: transparent;
		border: 2px solid rgba(255, 255, 255, 0.3);
		position: relative;
		padding: 2rem;
		clip-path: polygon(0 0, calc(100% - 30px) 0, 100% 30px, 100% 100%, 30px 100%, 0 calc(100% - 30px));
		z-index: 2;
	}

	.hud-frame::before {
		content: '';
		position: absolute;
		top: -2px;
		left: -2px;
		right: -2px;
		bottom: -2px;
		background: transparent;
		clip-path: polygon(0 0, calc(100% - 30px) 0, 100% 30px, 100% 100%, 30px 100%, 0 calc(100% - 30px));
		z-index: -1;
	}

	/* Titre CONTACT */
	.contact-title {
		font-family: var(--font-title2);
		font-size: clamp(32px, 6vw, 48px);
		color: white;
		text-align: center;
		letter-spacing: 0.3em;
		margin-bottom: 2rem;
		text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
	}

	/* Interface principale */
	.contact-interface {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 2rem;
		height: 100%;
	}

	/* Section formulaire */
	.form-section {
		display: flex;
		flex-direction: column;
	}

	/* Barre d'onglets */
	.tab-bar {
		background: rgba(97, 84, 197, 0.2);
		border: 1px solid rgba(97, 84, 197, 0.5);
		padding: 0.5rem 1rem;
		margin-bottom: 1rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.tab-item {
		font-family: var(--font-smalltext);
		font-size: 12px;
		color: white;
		letter-spacing: 0.1em;
	}

	.tab-controls {
		display: flex;
		gap: 2rem;
	}

	.tab-label {
		font-family: var(--font-smalltext);
		font-size: 10px;
		color: rgba(255, 255, 255, 0.7);
		letter-spacing: 0.1em;
	}

	/* Container formulaire violet */
	.form-container {
		background: linear-gradient(135deg, rgba(97, 84, 197, 0.3), rgba(150, 46, 185, 0.3));
		border: 1px solid rgba(97, 84, 197, 0.5);
		padding: 2rem;
		flex: 1;
	}

	.contact-form {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		height: 100%;
	}

	.form-row {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
	}

	.form-group {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.form-group.full-width {
		grid-column: 1 / -1;
	}

	.form-group label {
		font-family: var(--font-smalltext);
		font-size: 11px;
		color: white;
		letter-spacing: 0.1em;
		text-transform: uppercase;
	}

	.form-group input,
	.form-group textarea {
		background: rgba(255, 255, 255, 0.9);
		border: none;
		padding: 0.8rem;
		font-family: var(--font-text);
		font-size: 14px;
		color: #333;
		border-radius: 2px;
	}

	.form-group input:focus,
	.form-group textarea:focus {
		outline: 2px solid rgba(97, 84, 197, 0.8);
		background: white;
	}

	.submit-button {
		background: transparent;
		border: 2px solid white;
		color: white;
		padding: 1rem 2rem;
		font-family: var(--font-smalltext);
		font-size: 12px;
		letter-spacing: 0.2em;
		cursor: pointer;
		margin-top: auto;
		align-self: center;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		transition: all 0.3s ease;
	}

	.submit-button:hover {
		background: white;
		color: #333;
	}

	.button-arrows {
		font-size: 16px;
	}

	/* Section éléments HUD */
	.hud-elements {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	/* Globe wireframe */
	.globe-container {
		border: 1px solid rgba(255, 255, 255, 0.3);
		background: rgba(0, 0, 0, 0.5);
		padding: 1rem;
		text-align: center;
	}

	.globe-wireframe {
		margin-bottom: 1rem;
	}

	.wireframe-svg {
		width: 150px;
		height: 150px;
		animation: globeRotate 10s linear infinite;
	}

	@keyframes globeRotate {
		from { transform: rotateY(0deg); }
		to { transform: rotateY(360deg); }
	}

	.globe-label {
		font-family: var(--font-smalltext);
		font-size: 10px;
		color: rgba(255, 255, 255, 0.7);
		letter-spacing: 0.1em;
	}

	/* Graphique en barres */
	.chart-container {
		border: 1px solid rgba(255, 255, 255, 0.3);
		background: rgba(0, 0, 0, 0.5);
		padding: 1rem;
		height: 150px;
	}

	.bar-chart {
		display: flex;
		align-items: flex-end;
		gap: 4px;
		height: 100%;
	}

	.bar {
		flex: 1;
		background: linear-gradient(to top, #962EB9, #B8BBF0);
		animation: barPulse 2s ease-in-out infinite;
		animation-delay: calc(var(--i) * 0.1s);
	}

	.bar:nth-child(1) { animation-delay: 0s; }
	.bar:nth-child(2) { animation-delay: 0.1s; }
	.bar:nth-child(3) { animation-delay: 0.2s; }
	.bar:nth-child(4) { animation-delay: 0.3s; }
	.bar:nth-child(5) { animation-delay: 0.4s; }
	.bar:nth-child(6) { animation-delay: 0.5s; }
	.bar:nth-child(7) { animation-delay: 0.6s; }
	.bar:nth-child(8) { animation-delay: 0.7s; }
	.bar:nth-child(9) { animation-delay: 0.8s; }

	@keyframes barPulse {
		0%, 100% { opacity: 0.7; }
		50% { opacity: 1; }
	}

	/* Responsive */
	@media (max-width: 768px) {
		.contact-interface {
			grid-template-columns: 1fr;
		}
		
		.form-row {
			grid-template-columns: 1fr;
		}
		
		.contact-main {
			padding: 6rem 1rem 2rem;
		}
		
		.hud-frame {
			padding: 1rem;
		}
	}
