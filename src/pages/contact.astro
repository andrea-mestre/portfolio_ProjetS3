			<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
				<!-- Section gauche - Formulaire -->
				<div class="lg:col-span-2 flex flex-col">
					<!-- Barre d'onglets -->
					<div class="bg-[rgba(97,84,197,0.2)] border border-[rgba(97,84,197,0.5)] px-4 py-2 mb-4 flex justify-between items-center">
						<div class="font-mono text-xs text-white tracking-wider">VEUILLEZ TRANSMETTRE UN MESSAGE :</div>
						<div class="flex gap-8">
							<span class="font-mono text-[10px] text-white/70 tracking-wider">PROJETS</span>
							<span class="font-mono text-[10px] text-white/70 tracking-wider">RETOURS</span>
							<span class="font-mono text-[10px] text-white/70 tracking-wider">QUESTIONS</span>
						</div>
					</div>
					
					<!-- Zone de formulaire violette -->
					<div class="bg-gradient-to-br from-[rgba(97,84,197,0.3)] to-[rgba(150,46,185,0.3)] border border-[rgba(97,84,197,0.5)] p-8 flex-1">
						<form class="flex flex-col gap-6 h-full">
							<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
								<div class="flex flex-col gap-2">
									<label class="font-mono text-[11px] text-white tracking-wider uppercase">PRÉNOM</label>
									<input type="text" name="prenom" required class="bg-white/90 border-none p-3 font-mono text-sm text-gray-800 rounded-sm focus:outline-none focus:ring-2 focus:ring-[rgba(97,84,197,0.8)] focus:bg-white">
								</div>
								<div class="flex flex-col gap-2">
									<label class="font-mono text-[11px] text-white tracking-wider uppercase">NOM</label>
									<input type="text" name="nom" required class="bg-white/90 border-none p-3 font-mono text-sm text-gray-800 rounded-sm focus:outline-none focus:ring-2 focus:ring-[rgba(97,84,197,0.8)] focus:bg-white">
								</div>
							</div>
							
							<div class="flex flex-col gap-2">
								<label class="font-mono text-[11px] text-white tracking-wider uppercase">EMAIL</label>
								<input type="email" name="email" required class="bg-white/90 border-none p-3 font-mono text-sm text-gray-800 rounded-sm focus:outline-none focus:ring-2 focus:ring-[rgba(97,84,197,0.8)] focus:bg-white">
							</div>
							
							<div class="flex flex-col gap-2">
								<label class="font-mono text-[11px] text-white tracking-wider uppercase">SUJET</label>
								<input type="text" name="sujet" required class="bg-white/90 border-none p-3 font-mono text-sm text-gray-800 rounded-sm focus:outline-none focus:ring-2 focus:ring-[rgba(97,84,197,0.8)] focus:bg-white">
							</div>
							
							<div class="flex flex-col gap-2">
								<label class="font-mono text-[11px] text-white tracking-wider uppercase">MESSAGE</label>
								<textarea name="message" rows="6" required class="bg-white/90 border-none p-3 font-mono text-sm text-gray-800 rounded-sm resize-none focus:outline-none focus:ring-2 focus:ring-[rgba(97,84,197,0.8)] focus:bg-white"></textarea>
							</div>
							
							<button type="submit" class="bg-transparent border-2 border-white text-white px-8 py-4 font-mono text-xs tracking-[0.2em] cursor-pointer mt-auto self-center flex items-center gap-2 transition-all duration-300 hover:bg-white hover:text-gray-800">
								<span class="text-base">⟨</span>
								ENVOYER
								<span class="text-base">⟩</span>
							</button>
						</form>
					</div>
				</div>
				
				<!-- Section droite - Éléments HUD -->
				<div class="flex flex-col gap-8">
					<!-- Globe wireframe -->
					<div class="border border-white/30 bg-black/50 p-4 text-center">
						<div class="mb-4">
							<svg viewBox="0 0 200 200" class="wireframe-svg w-32 h-32 mx-auto">
								<!-- Cercle extérieur -->
								<circle cx="100" cy="100" r="90" fill="none" stroke="white" stroke-width="1"/>
								<!-- Lignes de latitude -->
								<ellipse cx="100" cy="100" rx="90" ry="30" fill="none" stroke="white" stroke-width="1"/>
								<ellipse cx="100" cy="100" rx="90" ry="60" fill="none" stroke="white" stroke-width="1"/>
								<!-- Lignes de longitude -->
								<ellipse cx="100" cy="100" rx="30" ry="90" fill="none" stroke="white" stroke-width="1"/>
								<ellipse cx="100" cy="100" rx="60" ry="90" fill="none" stroke="white" stroke-width="1"/>
								<line x1="100" y1="10" x2="100" y2="190" stroke="white" stroke-width="1"/>
							</svg>
						</div>
						<div class="font-mono text-[10px] text-white/70 tracking-wider">LOCALISATION GÉOGRAPHIQUE</div>
					</div>
					
					<!-- Graphique en barres -->
					<div class="border border-white/30 bg-black/50 p-4 h-40">
						<div class="flex items-end gap-1 h-full">
							<div class="bar flex-1 bg-gradient-to-t from-[#962EB9] to-[#B8BBF0]" style="height: 60%"></div>
							<div class="bar flex-1 bg-gradient-to-t from-[#962EB9] to-[#B8BBF0]" style="height: 40%"></div>
